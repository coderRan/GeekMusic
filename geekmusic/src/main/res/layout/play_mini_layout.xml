<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_mini_music"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">
    <ImageView
        android:id="@+id/iv_music_img"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@mipmap/app_logo2"/>

    <LinearLayout
        android:id="@+id/ll_control"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_last_mini"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/last_music"/>
        <ImageView
            android:id="@+id/iv_play_mini"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/pause"/>
        <ImageView
            android:id="@+id/iv_next_mini"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/next_music"/>
    </LinearLayout>
    <LinearLayout
        android:layout_toLeftOf="@id/ll_control"
        android:id="@+id/ll_music_info"
        android:layout_toRightOf="@id/iv_music_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/marginLeft"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_mini_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/main_text_size"
            android:text="歌曲名"/>
        <TextView
            android:id="@+id/tv_mini_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="演唱者"/>
    </LinearLayout>
</RelativeLayout>